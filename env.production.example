# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.production and update the values for your production environment

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Base URL for your application (used for generating absolute URLs)
APP_URL=http://192.168.1.30:3000

# Application name and version
APP_NAME=RecepcionActiva
APP_VERSION=1.0.0

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Individual database variables (used by custom Prisma adapter)
DB_HOST=192.168.1.30
DB_PORT=1433
DB_USER=sa
DB_PASS=su_password_aqui
DB_NAME=VsolDatos

# Prisma DATABASE_URL (for standard Prisma operations)
DATABASE_URL="sqlserver://sa:su_password_aqui@192.168.1.30:1433;database=VsolDatos;trustServerCertificate=true"

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# ===========================================
# FTP CONFIGURATION
# ===========================================
FTP_HOST=192.168.8.10
FTP_PORT=21
FTP_USER=usermw
FTP_PASSWORD=usermw
FTP_BASE_PATH=/uploads/orders
FTP_SECURE=false
FTP_TIMEOUT=30000

# HTTP base URL for accessing FTP files
FTP_HTTP_BASE_URL=http://192.168.8.10/uploads

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Session configuration
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400000

# Password encryption salt rounds
BCRYPT_ROUNDS=12

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Request timeout (in milliseconds)
REQUEST_TIMEOUT=30000

# ===========================================
# MONITORING & HEALTH CHECKS
# ===========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN=http://192.168.1.30:3000
CORS_CREDENTIALS=true

# ===========================================
# PM2 CONFIGURATION
# ===========================================
# PM2 environment file (used by ecosystem.config.js)
PM2_ENV_FILE=.env.production

# PM2 instance configuration
PM2_INSTANCES=1
PM2_MAX_MEMORY=1G

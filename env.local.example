# ===========================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.local for local development

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3001
HOSTNAME=localhost

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# URL base de la aplicación para desarrollo local
APP_URL=http://localhost:3001

# Nombre y versión de la aplicación
APP_NAME=RecepcionActiva
APP_VERSION=1.0.0

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Individual database variables (used by custom Prisma adapter)
DB_HOST=192.168.1.30
DB_PORT=1433
DB_USER=sa
DB_PASS=su_password_aqui
DB_NAME=VsolDatos

# Prisma DATABASE_URL (for standard Prisma operations)
DATABASE_URL="sqlserver://sa:su_password_aqui@192.168.1.30:1433;database=VsolDatos;trustServerCertificate=true"

# Database connection pool settings
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_POOL_IDLE_TIMEOUT=30000

# ===========================================
# FTP CONFIGURATION (Local Development)
# ===========================================
# Para desarrollo local, puede usar el servidor FTP de producción
# o configurar un servidor FTP local
FTP_HOST=192.168.8.10
FTP_PORT=21
FTP_USER=usermw
FTP_PASSWORD=usermw
FTP_BASE_PATH=/uploads/orders
FTP_SECURE=false
FTP_TIMEOUT=30000

# URL base HTTP para acceder a los archivos FTP
FTP_HTTP_BASE_URL=http://192.168.8.10/uploads

# ===========================================
# SECURITY CONFIGURATION (Development)
# ===========================================
# Para desarrollo, puede usar valores menos seguros
JWT_SECRET=dev-jwt-secret-key-not-for-production
SESSION_SECRET=dev-session-secret-not-for-production
SESSION_MAX_AGE=86400000
BCRYPT_ROUNDS=10

# ===========================================
# LOGGING CONFIGURATION (Development)
# ===========================================
LOG_LEVEL=debug
LOG_FILE=logs/dev-app.log
LOG_MAX_SIZE=5m
LOG_MAX_FILES=3

# ===========================================
# PERFORMANCE CONFIGURATION (Development)
# ===========================================
MAX_FILE_SIZE=5242880
REQUEST_TIMEOUT=60000

# ===========================================
# MONITORING & HEALTH CHECKS (Development)
# ===========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# ===========================================
# CORS CONFIGURATION (Development)
# ===========================================
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# ===========================================
# DEVELOPMENT NOTES
# ===========================================
# - Este archivo es para desarrollo local
# - Los valores de seguridad son menos estrictos
# - El logging es más verboso para debugging
# - Los timeouts son más largos para desarrollo
# - La base de datos puede ser la misma que producción o una copia
